<div class="Container">
	<h1 align="Center">Datos de Parroquia</h1>
	<div class="col-lg-offset-4 col-md-offset-4 col-xs-12 col-sm-9 col-md-6 col-lg-6">
		<br/>
		<p>
		  <strong>Nombre:</strong>
		  <%= @parish.Name %>
		</p>
		<p>
		  <strong>Dirección:</strong>
		  <%= @parish.address %>
		</p>
		<p>
		  <strong>Encargados:</strong>
		  <%= @parish.managers_id %>
		</p>
		<p>
		  <strong>Vicarías:</strong>
		  <%= if(@parish.vicarage_id != nil) then Vicarage.find(@parish.vicarage_id).Name end%>
		</p>
	</div>
	<div class="col-lg-offset-4 col-md-offset-4 col-xs-12 col-sm-9 col-md-4 col-lg-4" align="center">
		<br/>
		<%= link_to 'Modificar', edit_parish_path(@parish), {:class=>"btn btn-primary btn-lg", :style=>'width:100%;'} %>
		<br/><br/>
		<%= link_to 'Lista de Parroquias', parishes_path, {:class=>"btn btn-success btn-lg", :style=>'width:100%;'} %>
	</div>
</div>