<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Nombre_Completo %><br>
    <%= f.text_field :fullName %>
  </div>
  <div class="field">
    <%= f.label :Fecha_de_nacimiento %><br>
    <%= f.date_select :birthDate, {:use_month_names => ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre'], :start_year => 1900, :end_year => 2015}  %>
  </div>
  <div class="field">
    <%= f.label :teléfono %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :grupo %><br>
    <%= f.number_field :group_id %>
  </div>
  <div class="actions">
    <%= f.submit 'Añadir Integrante', :class => 'btn btn-info' %>
  </div>
<% end %>
