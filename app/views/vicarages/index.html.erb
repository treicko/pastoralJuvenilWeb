<h1>Lista de Vicarias</h1>
<div class="row">
<div class="col-sm-offset-3 col-md-offset-3 col-lg-offset-3" align="center">
  <div class="col-sm-6 col-md-6 col-lg-6" >
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon" style="color:white; background-color:#008CBA">
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        </span>
        <input type="text" class="form-control">
        <span class="input-group-btn">
          <button class="btn btn-primary" type="button">Buscar Vicar&iacute;a</button>
        </span>
      </div>
    </div>
  </div>
</div>
</div>
<div class="row">
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Encargados</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @vicarages.each do |vicarage| %>
        <tr>
          <td><%= vicarage.Name %></td>
          <td><%= vicarage.managers_id %></td>
          <td><%= link_to 'Ver', vicarage %></td>
          <td><%= link_to 'Modificar', edit_vicarage_path(vicarage) %></td>
          <td><%= link_to 'Eliminar', vicarage, method: :delete, class:"btn btn-danger", data: {toggle: "modal", target: "#modal_destroy"} %></td>
          <td><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal_destroy">Delete</button></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="modal" id="modal_destroy">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Cuidado!</h4>
      </div>
      <div class="modal-body">
        <p>Est&aacute; seguro que desea <strong>eliminar</strong> esta vicar&iacute;a</p>
      </div>
      <div class="modal-footer">
        <a href="" class="btn btn-danger">Aceptar</a>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>

