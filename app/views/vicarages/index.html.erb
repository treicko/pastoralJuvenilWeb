<div class="row" align="center">
  <table class="table table-striped table-hover" style="width:80%">
    <thead>
      <tr>
        <th>#</th>
        <th>Nombre</th>
        <th>Encargados</th>
        <th colspan="3" style="text-align:center;">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% count=1 %>
      <% @vicarages.each do |vicarage| %>
        <tr>
          <td style="vertical-align:middle;"><%= count %></td>
          <td style="vertical-align:middle; width:50%"><%= vicarage.Name %></td>
          <td style="vertical-align:middle; width:50%"><%= vicarage.managers_id %></td>
          <td style="vertical-align:middle; width:10%">
            <%= link_to vicarage, class: 'btn btn-primary', title: "Ver Vicaría" do %>
              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            <% end %>
          </td>
          <td style="vertical-align:middle; width:10%">
            <%= link_to edit_vicarage_path(vicarage), class: 'btn btn-warning', title: "Modificar Vicaría" do %>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            <% end %>
          </td>
          <td style="vertical-align:middle; width:10%">
            <button id="<%=count%>" class="btn btn-danger" data-toggle="modal" data-target="#modal_destroy" value="<%=vicarage.id%>" onclick="setDeleteButtonIdAndValue(id,value)" title="Eliminar Vicaría">
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </button>
          </td>
        </tr>
        <% count=count+1 %>
      <% end %>

    </tbody>
  </table>
</div>

<div class="modal" id="modal_destroy">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" style="background:#F04124;">
        <h4 class="modal-title" style="color:white;">Atenci&oacute;n!</h4>
      </div>
      <div class="modal-body">
        <p>Est&aacute; seguro que desea <strong>eliminar</strong> esta vicar&iacute;a?</p>
      </div>
      <div class="modal-footer">
        <a id="drop_vicarage" class="btn btn-danger" rel="nofollow" data-method="delete">Aceptar</a>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>

